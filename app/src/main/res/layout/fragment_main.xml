<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"


    tools:context=".MainFragment">

    <!-- TODO: Update blank fragment layout -->
    <!-- 오늘 달린 거리 탭-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rectangle_style"
        android:orientation="vertical"
        android:padding="15dp"
        android:textSize="30sp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:text="오늘의 러닝"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/profile_picture"
            android:layout_gravity="left|bottom"
            android:layout_marginLeft="18dp"
            android:layout_marginBottom="0dp"
            android:layout_toRightOf="@+id/profile_picture"
            android:text="닉네임 님"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"

            android:layout_gravity="right|top"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="32dp"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_picture"
            android:layout_marginLeft="10dp"
            android:text="%s 킬로미터"
            android:textSize="30dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rectangle_style"
        android:orientation="vertical"
        android:padding="15dp">


        <Button
            android:id="@+id/viewAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="모두보기"
            android:background="@android:color/transparent"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_challenge_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="월간 챌린지"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_challenge_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_challenge_month"
            android:text="주간 챌린지
"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_challenge_week"
            android:text="일일 챌린지"
            android:textColor="@color/white" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rectangle_style"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="닉네임 님은"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="이번 달에 11키로를 달렸습니다"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="지금까지는 총 --키로나 달리셨네요! 대단합니다!"
            android:textColor="@color/white" />
    </LinearLayout>

    <android.widget.Button
        android:id="@+id/btn_run"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/run_button_style"
        android:drawableRight="@drawable/running_icon1"
        android:fontFamily="@font/carterone_regular"
        android:text="          Let's Run"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="italic" />
</LinearLayout>