<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:gravity="bottom"
    app:umanoShadowHeight="0dp"
    app:umanoPanelHeight="100dp"
    app:umanoOverlay="true"
    app:umanoDragView="@+id/slide_layout"
    tools:context=".MainFragment">

    <!-- TODO: Update blank fragment layout -->
    <!-- 오늘 달린 거리 탭-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <fragment
                android:id="@+id/map_fragment"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout="@layout/activity_run" />
            <FrameLayout
                android:background="@drawable/map_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/setting_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:minWidth="0dp"
                    android:background="@color/white"
                    android:elevation="4dp" >
                    <ImageView
                        android:id="@+id/setting"
                        android:src="@mipmap/ic_main2"
                        android:layout_marginRight="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                    <TextView
                        android:text="러 닝"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:background="#FFFFFF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.appcompat.widget.Toolbar>
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_marginTop="80dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <fragment
                    android:id="@+id/map_fragment"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:layout="@layout/activity_run" />
                <FrameLayout
                    android:background="@drawable/map_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/setting_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:minWidth="0dp"
                        android:background="@color/white"
                        android:elevation="4dp" >
                        <ImageView
                            android:id="@+id/setting"
                            android:src="@mipmap/ic_main2"
                            android:layout_gravity="right"
                            android:layout_marginRight="20dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />
                        <TextView
                            android:text="러 닝"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:background="#FFFFFF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </androidx.appcompat.widget.Toolbar>
                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_marginTop="80dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="300dp"
                                android:layout_height="120dp"
                                android:layout_marginLeft="57dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/shadow_style"
                                android:elevation="10dp">

                                <ImageView
                                    android:id="@+id/profile_picture"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="20dp"
                                    android:src="@mipmap/ic_main2" />

                                <TextView
                                    android:id="@+id/nicknameTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/profile_picture"
                                    android:layout_alignBaseline="@id/profile_picture"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="20dp"
                                    android:textColor="#201F1F"
                                    android:textSize="15dp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_margin="30dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_distance"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="00.00"
                                        android:textColor="@color/black"
                                        android:textSize="25dp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="거리(km)" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="20dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="00kcal"
                                        android:textColor="@color/black"
                                        android:textSize="25dp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="칼로리" />
                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="300dp"
                                android:layout_height="130dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/shadow_style"
                                android:elevation="10dp">

                                <ImageView
                                    android:id="@+id/profile_picture2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="20dp"
                                    android:src="@mipmap/ic_main2" />

                                <TextView
                                    android:id="@+id/nicknameTextView2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/profile_picture2"
                                    android:layout_alignBaseline="@id/profile_picture2"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="20dp"
                                    android:textColor="#201F1F"
                                    android:textSize="20dp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_margin="30dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="00.00"
                                        android:textColor="@color/black"
                                        android:textSize="25dp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="거리(km)" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="20dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="00kcal"
                                        android:textColor="@color/black"
                                        android:textSize="25dp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="칼로리" />
                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="300dp"
                                android:layout_height="120dp"
                                android:layout_marginRight="57dp"
                                android:background="@drawable/shadow_style"
                                android:elevation="10dp">

                                <ImageView
                                    android:id="@+id/profile_picture3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="20dp"
                                    android:src="@mipmap/ic_main2" />

                                <TextView
                                    android:id="@+id/nicknameTextView3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/profile_picture3"
                                    android:layout_alignBaseline="@id/profile_picture3"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="20dp"
                                    android:textColor="#201F1F"
                                    android:textSize="20dp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:layout_margin="30dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="00.00"
                                        android:textColor="@color/black"
                                        android:textSize="25dp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="거리(km)" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="20dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="00kcal"
                                        android:textColor="@color/black"
                                        android:textSize="25dp" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:text="칼로리" />
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>

                    </HorizontalScrollView>
                    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                        android:id="@+id/btn_run"
                        android:layout_height="80dp"
                        android:layout_width="80dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="165dp"
                        android:layout_marginBottom="110dp"
                        app:backgroundTint="#FF0"
                        android:text=" 시작"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textAlignment="center" />
                </FrameLayout>
            </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@android:color/transparent"
        android:id="@+id/slide_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:text="챌린지"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:paddingTop="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:background="@drawable/slide_view_background"
            android:layout_width="90dp"
            android:layout_height="28dp"/>
        <LinearLayout
            android:background="@drawable/main_background"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <RelativeLayout
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rectangle_style"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >
                        <TextView
                            android:id="@+id/txt_challenge_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="9dp"
                            android:text="월간 챌린지"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <Button
                            android:id="@+id/viewAll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="204dp"
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:text="모두보기"
                            android:background="@android:color/transparent"
                            android:textColor="@color/black" />
                    </LinearLayout>
                    <ProgressBar
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:max="100"
                        android:progress="30"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_challenge_week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_challenge_month"
                        android:text="주간 챌린지"
                        android:textColor="@color/black" />

                    <ProgressBar
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:max="100"
                        android:progress="50"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_challenge_week"
                        android:text="일일 챌린지"
                        android:textColor="@color/black" />

                    <ProgressBar
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:max="100"
                        android:progress="90"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rectangle_style"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임 님은"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이번 달에 11키로를 달렸습니다"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지금까지는 총 --키로나 달리셨네요! 대단합니다!"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>