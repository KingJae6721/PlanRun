<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment"
    android:padding="5dp"


    android:orientation="vertical"

    >

    <!-- TODO: Update blank fragment layout -->
    <!-- 오늘 달린 거리 탭-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rectangle_style"
        android:orientation="vertical"
        android:padding="15dp"
        android:textSize="30sp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="오늘의 러닝"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/profile_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_gravity="left"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/profile_picture"
            android:layout_gravity="left|bottom"
            android:layout_toRightOf="@+id/profile_picture"
            android:text="닉네임 님"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"

            android:layout_gravity="right|top"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="32dp"
            android:src="@mipmap/ic_launcher_round" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_picture"
            android:text="%s 킬로미터"
            android:textSize="30dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_style"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="모두보기"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_challenge_month"
            android:text="월간 챌린지"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_challenge_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주간 챌린지
"
            android:layout_below="@+id/txt_challenge_month"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_challenge_week"
            android:text="일일 챌린지"
            android:textColor="@color/white"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_style"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_marginBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="닉네임 님은"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="이번 달에 11키로를 달렸습니다"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="지금까지는 총 --키로나 달리셨네요! 대단합니다!"
            android:textColor="@color/white"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_run"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#95e0d623"
        android:text="고마 쎼리 달리뿌자!"
        android:textColor="@color/black"
        android:textSize="30dp"/>
</LinearLayout>