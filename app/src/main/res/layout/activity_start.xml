<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center" >

    <ImageView
        android:layout_width="350dp"
        android:layout_height="800dp"
        android:layout_weight="10"
        android:layout_marginTop="140dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_logonmex4"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="306dp"
        android:layout_height="58dp"
        android:layout_marginTop="150dp"
        android:backgroundTint="#83B1F8"
        android:text="Log In"
        android:letterSpacing="0"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="18dp" />
    <TextView
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="or use one of your social profiles"
        android:layout_marginBottom="10dp"
        android:textColor="#989eb1"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="185dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/google_sign_in_button"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:background="@drawable/btn_google_signin"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/btn_kakao"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="2dp"
            android:adjustViewBounds="true"
            android:background="@drawable/kakao_login1"
            android:scaleType="fitCenter" />
    </LinearLayout>

</LinearLayout>