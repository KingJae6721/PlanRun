<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity"
    android:background="@drawable/start_background"
    android:orientation="vertical"
    android:gravity="center" >

    <ImageView
        android:layout_width="350dp"
        android:layout_height="800dp"
        android:layout_weight="10"
        android:layout_marginTop="140dp"
        android:src="@drawable/ic_logonmex5"
        android:visibility="visible" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:layout_width="306dp"
        android:layout_height="45dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/btn_login_style"
        android:textColor="#3F7EF2"
        android:text="Log In"
        android:letterSpacing="0"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textSize="18dp" />
    <TextView
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="or use one of your social profiles"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="13dp"
        android:textColor="#DDDDDF"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="185dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/google_sign_in_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:background="@drawable/google_login2"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/btn_kakao"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:adjustViewBounds="true"
            android:background="@drawable/kakao_login2"
            android:scaleType="fitCenter" />
    </LinearLayout>

</LinearLayout>