<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".RegisterActivity"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:textAlignment="center"
        android:text="Sign up"
        android:textSize="40dp"
        android:textColor="#DAA8A8A8"
        android:textStyle="bold"
        android:layout_marginTop="85dp"
        android:layout_marginBottom="50dp"
        android:textAllCaps="false"
        android:letterSpacing="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_nickname"
        android:layout_width="332dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_style"
        android:textSize="13dp"
        android:hint="닉네임"
        android:paddingLeft="15dp"
        android:textColor="@color/black"
        android:textColorHint="#CFC0C0C0"
        android:textStyle="bold"
        android:inputType="textEmailAddress" />
    <TextView
        android:id="@+id/nickname_condition"
        android:textSize="11dp"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:layout_marginBottom="7dp"/>

    <EditText
        android:id="@+id/et_email"
        android:layout_width="332dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_style"
        android:textSize="13dp"
        android:hint="이메일"
        android:paddingLeft="15dp"
        android:textColor="@color/black"
        android:textColorHint="#CFC0C0C0"
        android:textStyle="bold"
        android:inputType="textEmailAddress" />
    <TextView
        android:id="@+id/email_condition"
        android:textSize="11dp"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:layout_marginBottom="7dp" />

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="332dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_style"
        android:textSize="13dp"
        android:hint="비밀번호"
        android:textColor="@color/black"
        android:paddingLeft="15dp"
        android:textStyle="bold"
        android:textColorHint="#CEC0C0C0"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/pwd_condition"
        android:textSize="11dp"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:layout_marginBottom="7dp" />

    <EditText
        android:id="@+id/et_pwd_check"
        android:layout_width="332dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_style"
        android:textSize="13dp"
        android:hint="비밀번호 재확인"
        android:paddingLeft="15dp"
        android:textColor="@color/black"
        android:textColorHint="#CFC0C0C0"
        android:textStyle="bold"
        android:inputType="textPassword"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <RadioButton
                android:layout_weight="1"
                android:id="@+id/radioButtonMale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/CustomRadioButton"
                android:textColor="#CF5E5E5E"
                android:textSize="13dp"
                android:text="남성" />
            <RadioButton
                android:layout_weight="1"
                android:id="@+id/radioButtonFemale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/CustomRadioButton"
                android:textColor="#CF5E5E5E"
                android:textSize="13dp"
                android:text="여성" />
        </LinearLayout>
    </RadioGroup>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="332dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/editTextHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#9DD6FA"
            android:hint="키"
            android:textColor="@color/black"
            android:textColorHint="#CFC0C0C0"
            android:textAlignment="center"
            android:textSize="13dp"
            android:inputType="numberDecimal" />
        <TextView
            android:text="cm"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#9E9A9A"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editTextWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:hint="몸무게"
            android:textColor="@color/black"
            android:textColorHint="#CFC0C0C0"
            android:backgroundTint="#9DD6FA"
            android:textAlignment="center"
            android:textSize="13dp"
            android:inputType="numberDecimal" />
        <TextView
            android:text="kg"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#9E9A9A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_register"
        android:layout_gravity="center_horizontal"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="75dp"
        android:background="@drawable/btn_register_style"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#F4F2F2"
        android:letterSpacing="0"
        android:text="계정 생성"/>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="13dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이미 회원이신가요?"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#989eb1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:textAlignment="viewStart"
            android:paddingLeft="4dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#FF4990E8"
            android:textSize="13dp"
            android:text="로그인" />
    </LinearLayout>


</LinearLayout>
