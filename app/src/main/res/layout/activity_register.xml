<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:textAlignment="center"
        android:text="Sign up"
        android:textSize="40dp"
        android:textColor="#7A7A7A"
        android:textStyle="bold"
        android:layout_marginTop="85dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="40dp"
        android:textAllCaps="false"
        android:letterSpacing="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_nickname"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#3395DF"
        android:layout_marginLeft="40dp"
        android:hint="  닉네임"
        android:textColor="@color/black"
        android:textColorHint="#CFC0C0C0"
        android:textStyle="bold"
        android:inputType="textEmailAddress" />
    <TextView
        android:id="@+id/nickname_condition"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="40dp"/>

    <EditText
        android:id="@+id/et_email"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#3395DF"
        android:layout_marginLeft="40dp"
        android:hint="  이메일"
        android:textColor="@color/black"
        android:textColorHint="#CFC0C0C0"
        android:textStyle="bold"
        android:inputType="textEmailAddress" />
    <TextView
        android:id="@+id/email_condition"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="40dp"/>

    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:hint="  비밀번호"
        android:textColor="@color/black"
        android:backgroundTint="#3395DF"
        android:textStyle="bold"
        android:textColorHint="#CEC0C0C0"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/pwd_condition"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="40dp"/>

    <EditText
        android:id="@+id/et_pwd_check"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#3395DF"
        android:layout_marginLeft="40dp"
        android:hint="  비밀번호 재확인"
        android:textColor="@color/black"
        android:textColorHint="#CFC0C0C0"
        android:textStyle="bold"
        android:inputType="textPassword"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_register"
        android:layout_gravity="center_horizontal"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_login_style"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:letterSpacing="0"
        android:text="계정 생성"/>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="13dp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이미 회원이신가요?"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#989eb1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00ff0000"
            android:textAlignment="viewStart"
            android:paddingLeft="4dp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#EB3051F8"
            android:textSize="13dp"
            android:text="로그인" />
    </LinearLayout>


</LinearLayout>
