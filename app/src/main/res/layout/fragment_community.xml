<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/community_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".CommunityFragment">

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="53dp">
        <RelativeLayout
            android:id="@+id/post_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/post"
                android:text="게시물"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="38dp"/>
            <View
                android:id="@+id/post_line"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/post"
                android:background="#FFEB3B"
                android:layout_width="82dp"
                android:layout_height="3dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="100dp"
            android:id="@+id/club_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/club"
                android:text="클럽"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="38dp"/>
            <View
                android:id="@+id/club_line"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/club"
                android:background="@color/white"
                android:layout_width="55dp"
                android:layout_height="3dp"/>
        </RelativeLayout>


        <ImageView
            android:id="@+id/add_post"
            android:src="@drawable/ic_plus"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/search"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

        <ImageView
            android:id="@+id/search"
            android:src="@drawable/ic_search"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_width="35dp"
            android:layout_height="35dp"/>

    </RelativeLayout>

    <View
        android:layout_below="@+id/top_bar"
        android:background="#A8A8A8"
        android:layout_width="wrap_content"
        android:layout_height="3dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/containers">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigationview"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:background="#807a7a7a"
            app:itemIconSize="@dimen/design_bottom_navigation_height"
            app:itemIconTint="@drawable/menu_selector_color"
            app:itemTextColor="@drawable/menu_selector_color"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_menu" />
    </FrameLayout>

</RelativeLayout>