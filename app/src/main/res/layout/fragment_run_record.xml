<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/run_record1"
    android:layout_width="370dp"
    android:layout_height="110dp"
    tools:context=".RunRecordFragment">
    <TextView
        android:id="@+id/today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_toRightOf="@id/profile_picture"
        android:layout_above="@id/layout_km"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="오늘 달린 거리"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="110dp"
        android:textSize="13dp" />
    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:src="@mipmap/ic_main2" />

    <TextView
        android:id="@+id/no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/profile_picture"
        android:layout_marginLeft="40dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:text="아직 기록이없습니다..."
        android:textSize="20dp" />

    <TextView
        android:id="@+id/nicknameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_picture"
        android:layout_centerVertical="true"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="30dp"
        android:text="asdasdasdasdasdsad"
        android:textColor="#201F1F"
        android:textSize="15dp" />

    <LinearLayout
        android:id="@+id/layout_km"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_distance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="00.00"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="거리(km)" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_kcal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_kcal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="00"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="칼로리(kcal)" />
    </LinearLayout>

</RelativeLayout>