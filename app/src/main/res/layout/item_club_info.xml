<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    >
    <ImageView
        android:id="@+id/commentviewitem_imageview_profile"
        android:layout_margin="7.5dp"
        android:layout_width="60dp"
        android:layout_height="60dp"/>
<LinearLayout

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1">
    <TextView
        android:id="@+id/clubinfoviewitem_textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7.5dp"
        android:text="클럽이름"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/clubinfoviewitem_textview_comment"
        android:layout_marginTop="7.5dp"
        android:text="소개글"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        app:cardElevation="1dp"
        app:cardCornerRadius="50dp"
        app:cardBackgroundColor="#CBEAFD"
        android:layout_marginTop="7.5dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/clubinfoviewitem_textview_member"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원 명"
            android:layout_marginHorizontal="2.5dp"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:cardElevation="1dp"
        app:cardCornerRadius="50dp"
        app:cardBackgroundColor="#CBEAFD"
        android:layout_marginTop="7.5dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="1"
    >
    <TextView
        android:id="@+id/clubinfoviewitem_textview_post"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게시글"
        android:layout_marginHorizontal="5dp"
        />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:cardElevation="1dp"
        app:cardCornerRadius="50dp"
        app:cardBackgroundColor="#CBEAFD"
        android:layout_marginTop="7.5dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginHorizontal="20dp"
        android:layout_weight="1"
    >
    <TextView
        android:id="@+id/clubinfoviewitem_textview_registered"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가입여부"
        android:layout_marginHorizontal="5dp"
        />
</androidx.cardview.widget.CardView>

</LinearLayout>


</LinearLayout>

</LinearLayout>