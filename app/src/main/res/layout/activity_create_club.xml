<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"

    tools:context=".AddPhotoActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/create_club_toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/white"
        android:elevation="4dp" >

        <TextView
            android:text="클럽 생성"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#3E3D3D"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/addphoto_image"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="5dp"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* 클럽 대표 이미지를 선택해주세요."
        android:textSize="13dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addphoto_btn_add"
        android:text="사진 선택"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/btn_register_style"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:hint="클럽 이름"
            android:textSize="12dp"
            android:paddingLeft="7dp"
            android:background="@drawable/edit_style"
            android:layout_marginRight="10dp"
            android:layout_width="150dp"
            android:layout_height="30dp" />
        <androidx.appcompat.widget.AppCompatButton
            android:text="중복 확인"
            android:textSize="11dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:backgroundTint="#777777"
            android:background="@drawable/btn_register_style"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_gravity="center" />
    </LinearLayout>
    <EditText
        android:id="@+id/createclub_edit_explain"
        android:layout_gravity="center"
        android:gravity="top"
        android:paddingTop="5dp"
        android:paddingLeft="7dp"
        android:hint="클럽 소개글 작성"
        android:textSize="13dp"
        android:background="@drawable/edit_style"
        android:layout_width="380dp"
        android:layout_height="150dp"/>
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addphoto_btn_upload"
            android:text="생 성"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/btn_register_style"
            android:layout_marginRight="10dp"
            android:layout_width="150dp"
            android:layout_height="40dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/addphoto_btn_cancel"
            android:text="취 소"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:backgroundTint="#777777"
            android:background="@drawable/btn_register_style"
            android:layout_marginLeft="10dp"
            android:layout_width="150dp"
            android:layout_height="40dp"/>
    </LinearLayout>
</LinearLayout>